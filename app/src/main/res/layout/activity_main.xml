<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity" android:id="@+id/mainlayout"
        >
 <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Keyword"
                android:id="@+id/textView"
                android:textSize="50sp"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" android:id="@+id/relativeLayout2">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" android:id="@+id/radioGroup">
                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton"
                        android:checked="false" android:paddingBottom="30dp"/>
                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton2" android:checked="false" android:paddingBottom="30dp"/>
                <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content"
                             android:id="@+id/radioButton3" android:checked="false" android:paddingBottom="30dp"/>
                <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content"
                             android:id="@+id/radioButton4" android:checked="false"/>
            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnAnswer"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@drawable/next_question"
            android:scaleType="centerInside"
            app:fabSize="normal"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" android:visibility="invisible"/>
    <android.widget.ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/progressBar"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/btnAnswer"
            android:layout_alignLeft="@+id/btnAnswer"
            android:layout_alignStart="@+id/btnAnswer"/>
</RelativeLayout>
